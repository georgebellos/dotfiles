# lexically sort filenames
--sort-files
--color

--type-add=ruby=rake,haml
--type-add=vim=vimrc
--type-add=js=json

--type-set=css=sass

# add types ack doesn't know about
--type-set=MARKDOWN=md,mkd,markdown
--type-set=RDOC=rdoc

--ignore-dir=vendor
--ignore-dir=db/server
--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=db/*
--ignore-dir=doc/*
--ignore-dir=target
